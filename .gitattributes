*.pdf filter=lfs diff=lfs merge=lfs -text
*.gpkg filter=lfs diff=lfs merge=lfs -text

# Auto detect text files and perform LF normalization
* text=auto

# Always use LF for specific text files
*.sh text eol=lf
*.py text eol=lf
*.md text eol=lf
*.json text eol=lf
*.csv text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
